{
  "name": "context-man",
  "version": "1.0.0",
  "description": "MCP server for project context management - provides AI with project plans, guidelines, skills, and more",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "context-man": "./dist/bin/context-man.js"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "cli": "tsx src/bin/context-man.ts",
    "serve:mcp": "tsx src/bin/context-man.ts serve mcp",
    "serve:api": "tsx src/bin/context-man.ts serve api",
    "serve:all": "tsx src/bin/context-man.ts serve --all",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "vitest",
    "test:coverage": "vitest --coverage"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "ai",
    "context-management",
    "claude",
    "mongodb"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.0",
    "chalk": "^5.4.1",
    "cli-table3": "^0.6.5",
    "commander": "^13.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "handlebars": "^4.7.8",
    "helmet": "^8.0.0",
    "inquirer": "^12.4.2",
    "mongoose": "^8.10.1",
    "ora": "^8.1.1",
    "slugify": "^1.6.6",
    "uuid": "^11.0.5",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/inquirer": "^9.0.7",
    "@types/node": "^22.13.1",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.24.0",
    "@typescript-eslint/parser": "^8.24.0",
    "@vitest/coverage-v8": "^3.0.5",
    "eslint": "^9.19.0",
    "mongodb-memory-server": "^10.1.4",
    "prettier": "^3.4.2",
    "supertest": "^7.0.0",
    "tsup": "^8.3.6",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vitest": "^3.0.5"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
