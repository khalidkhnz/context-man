# Environment
NODE_ENV=development

# MongoDB
# Local MongoDB
MONGODB_URI=mongodb://localhost:27017/context-man
# Docker MongoDB (when using docker-compose)
# MONGODB_URI=mongodb://mongodb:27017/context-man
# MongoDB Atlas
# MONGODB_URI=mongodb+srv://user:password@cluster.mongodb.net/context-man

# REST API Server
API_PORT=7777
API_HOST=localhost

# MCP Server
MCP_HTTP_PORT=7778
# Transport: stdio (for Claude Desktop), http (for HTTP clients), both
MCP_TRANSPORT=stdio

# Logging
# Levels: debug, info, warn, error
LOG_LEVEL=info
